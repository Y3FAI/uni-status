---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "هل البلاك بورد شغال؟",
  description = "صفحة حالة غير رسمية لخدمات الجامعة السعودية الإلكترونية - البلاك بورد والـ SSO والبريد الإلكتروني",
} = Astro.props;
---

<!doctype html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-[#f5f0e8] font-sans antialiased">
    <slot />
    <script>
      // Register service worker for push notifications
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.register("/sw.js").catch((err) => {
          console.error("Service worker registration failed:", err);
        });
      }
    </script>
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  :root {
    --font-sans: "IBM Plex Sans Arabic", system-ui, sans-serif;
  }

  body {
    font-family: var(--font-sans);
  }

  /* Brutalist border utility */
  .border-3 {
    border-width: 3px;
  }

  .border-t-3 {
    border-top-width: 3px;
  }
</style>
